<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <!-- Logotipo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

        <!-- Ícone de Perfil -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/profileIcon"
            android:contentDescription="@string/menu"
            android:src="@drawable/profile_icon" />

        <!-- Ícone de Menu -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/test"
            android:src="@drawable/menu_icon" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFBFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_margin="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smartphone Nokia C21 Plus 4G 128GB Tela HD+ 6,5” Câm Dupla 13MP Android Bate- ria de 2 dias de duração +"
                android:textColor="#91939F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:cardBackgroundColor="#ffffff"
                android:layout_gravity="center"
                android:radius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Imagem Grande -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="303dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/celular1" />

                    <!-- Linha de 4 Retângulos Menores -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Retângulo 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:cardBackgroundColor="#ffffff"
                            android:radius="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/celular5"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <!-- Retângulo 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:cardBackgroundColor="#ffffff"
                            android:radius="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/celular2"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <!-- Retângulo 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:cardBackgroundColor="#ffffff"
                            android:radius="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/celular3"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <!-- Retângulo 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:cardBackgroundColor="#ffffff"
                            android:radius="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/celular4"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="72dp" />

            <TextView
                android:layout_marginStart="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$15,00"
                android:textColor="#91939F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_marginStart="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$15,00"
                android:textColor="#9FCF6B"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Em até 12x R$ 70,75 sem juros"
                android:textColor="#91939F"
                android:textSize="20sp"
                android:textStyle="normal"
                android:padding="8dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar ao Carrinho"
                android:background="@drawable/button_background"
                android:textColor="#9293FF"
                android:padding="12dp"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/buttonPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:background="@drawable/button_background_principal"
                android:textColor="#ffff"
                android:padding="12dp"
                android:layout_margin="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="188dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:hint="00000-000"
                    android:textColorHint="#A3A3A3"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calcular frete" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="72dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="429dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:cardBackgroundColor="#ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo" />

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>

</LinearLayout>