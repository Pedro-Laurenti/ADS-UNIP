<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <!-- Logotipo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

        <!-- Ícone de Perfil -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/profileIcon"
            android:contentDescription="@string/menu"
            android:src="@drawable/profile_icon" />

        <!-- Ícone de Menu -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/test"
            android:src="@drawable/menu_icon" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F0F3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_margin="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrinho"
                android:textColor="#91939F"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="214dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_rectangle">

                <!-- Metade Superior (Imagem Centralizada) -->

                <!-- Metade Inferior (Retângulo com Borda Arredondada e Texto) -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/celular1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <!-- Retângulo com Borda Arredondada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:baselineAligned="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Texto -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="R$ 20,00"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editTextTeaxt4"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:minHeight="48dp"
                            android:text="+      1      -" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="214dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_rectangle">

                <!-- Metade Superior (Imagem Centralizada) -->

                <!-- Metade Inferior (Retângulo com Borda Arredondada e Texto) -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/celular3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <!-- Retângulo com Borda Arredondada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:baselineAligned="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Texto -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="R$ 20,00"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editTextText4"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:minHeight="48dp"
                            android:text="+      1      -" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="#FFFFFF">

                <!-- Cabeçalho -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9293FF"
                    android:layout_marginHorizontal="20dp">

                    <!-- Coluna 1 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Frete"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"
                        android:gravity="center"/>

                    <!-- Coluna 2 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textColor="#FFFFFF"
                        android:padding="8dp"
                        android:gravity="center"/>

                    <!-- Adicione mais colunas conforme necessário -->

                </TableRow>

                <!-- Linha 1 -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginHorizontal="20dp">

                    <!-- Coluna 1 -->

                    <!-- Coluna 2 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Calcular frete"
                        android:textDecorationLine="underline"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R$ 30,00"
                        android:padding="8dp"
                        android:gravity="center"/>

                    <!-- Adicione mais colunas conforme necessário -->

                </TableRow>
            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <Button
                android:id="@+id/buttonPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/button_background_principal"
                android:padding="12dp"
                android:text="Confirmar"
                android:textColor="#ffff" />

            <androidx.cardview.widget.CardView
                android:layout_width="429dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:cardBackgroundColor="#ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>